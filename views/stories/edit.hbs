{{! We now populate the edit form from the story stored in the database }}

<h3>Edit Your Story</h3>
<div class="row">
  <form action="/stories/{{story._id}}" method="POST" class="col s12">
    {{! using method-override middleware to make a PUT request from the form }}
    <input type="hidden" name="_method" value="PUT" />
    <div class="row">
      <div class="input-field">
        <lavel for="title">Title</lavel>
        <input type="text" id="title" name="title" value="{{story.title}}" />
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select id="status" name="status">
          {{! using regex in the helper hbs.js to put 'selected' attribute based on one of the <option> depending on whether the story is public or private }}
          {{#select story.status}}
            <option value="public" selected>Public</option>
            <option value="private">Private</option>
          {{/select}}
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <h5>Tell us your story:</h5>
        <textarea id="body" name="body">{{story.body}}</textarea>
      </div>
    </div>

    <div class="row">
      <input type="submit" value="Save" class="btn" />
      <a href="/dashboard" class="btn orange">Cancel</a>
    </div>
  </form>
</div>